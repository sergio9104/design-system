{
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next -p 3002",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "test": "npx react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "npx react-scripts test --env=jest-environment-jsdom-sixteen --coverage --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run lint",
      "npm run format"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.6",
    "@chakra-ui/theme-tools": "1.3.6",
    "@elastic/elasticsearch": "^8.1.0",
    "@emotion/react": "11.8.2",
    "@emotion/styled": "11.8.1",
    "@gogaille/storybook-addon-next-router": "^4.0.0",
    "@snek-at/storybook-addon-chakra-ui": "^1.0.0-beta.1",
    "ajv": "^7.0.3",
    "copy-webpack-plugin": "^10.2.4",
    "framer-motion": "^4.1.17",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "next": "latest",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "storybook-addon-next-router": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@emotion/jest": "^11.8.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "eslint": "latest",
    "eslint-config-next": "latest",
    "husky": "latest",
    "lint-staged": "^12.3.7",
    "plop": "latest",
    "prettier": "latest",
    "typescript": "4.6.2"
  },
  "jest": {
    "moduleNameMapper": {
      "@components(.*)$": "<rootDir>/src/components/$1",
      "@contexts(.*)$": "<rootDir>/src/contexts/$1",
      "@templates(.*)$": "<rootDir>/src/templates/$1",
      "@pages(.*)$": "<rootDir>/pages/$1",
      "@styles(.*)$": "<rootDir>/src/styles/$1",
      "@utils(.*)$": "<rootDir>/src/utils/$1",
      "@services(.*)$": "<rootDir>/src/services/$1"
    },
    "coveragePathIgnorePatterns": [
      ".stories.js",
      "index.js",
      "styles.js",
      "styles/",
      "services/",
      "utils/",
      "contexts/",
      "pages/"
    ]
  },
  "resolutions": {
    "jest-environment-jsdom": "^26.0.1"
  }
}
